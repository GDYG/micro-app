{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "allowJs": true,
    "noImplicitAny": false,        // 允许隐式 any
    "jsx": "react-jsx",             // 如果是 React 17+，否则用 "react"
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["src"]
}
